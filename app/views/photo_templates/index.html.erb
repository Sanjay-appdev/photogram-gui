 <h1>List of photos</h1>
  
  <hr>
  
  <form action="/insert_photo">
  <lable for="image_box">Image</lable>
  <input id="image_box" name="query_image">
  
  <lable for="caption_box">Caption</lable>
  <textarea id="caption_box" name="query_caption"></textarea>

  <lable for="owner_id_box">Owner ID</lable>
  <input id="owner_id_box" name="query_owner_id">
  
  <button>Add photo</button>
  </form>
  <hr>

   <table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |a_photo| %>

  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
  </table>
